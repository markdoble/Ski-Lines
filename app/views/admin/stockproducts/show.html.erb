<div class="container col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="admin_product_well">
			<div class="row">
				<div class="col-lg-4 col-md-4 col-sm-5 col-xs-12">
					<% if @stockproduct.stockphoto.present? %>
					<div class="prod_img">
						<%= image_tag @stockproduct.stockphoto.photo.url(:large), class:"img-responsive" %>
		    	</div>
					<%else%>
					<%= image_tag "blank_photo.jpg", class: "img-responsive", width:"100%" %>
					<%end%>
				</div>
				<div class="col-lg-8 col-md-8 col-sm-7 col-xs-12">
					<h3><%=@stockproduct.name%>, <%= @stockproduct.brand %></h3>
					 <div class="old_unit_form">
							<div class="unit_inventory_intro_form">
								<div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
									<%= form_tag inventory_admin_stockproducts_path do %>
									<div class="diff_size">
									<h4>Does this product have different sizes? </h4>
									<%= label_tag "Yes"%>
									<%= radio_button_tag :size, "true" %><br />
									<%= label_tag "No"%>
									<%= radio_button_tag :size, "false" %><br />
									</div>
									<div class="diff_col">
									<h4>Does this product have different colours?</h4>
									<%= label_tag "Yes"%>
									<%= radio_button_tag :colours, "true" %><br />
									<%= label_tag "No"%>
									<%= radio_button_tag :colours, "false" %><br />
									</div>
									<br />
									<%= hidden_field_tag :id, @stockproduct.id%>
									<div class="units_button">
									<%= submit_tag "Create Inventory!", class: "btn btn-primary btn-large create_unit_form"%>
									</div>
									<br /><br />
									<%end%>
								</div>
								<div class="col-lg-4 col-md-4 hidden-sm hidden-xs">
								</div>
							</div>
					 </div>
				</div><br />
			</div>
		</div>
</div>
