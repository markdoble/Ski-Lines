<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
	<div class="merchant_title col-xs-12">
		<h1>Stock Products</h1>
	</div>
<div class="row">
	<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
	<br />
		  <%= form_tag admin_stockproducts_path, method: :get do %>
		  <%= label_tag :brand_selected, "Brand:" %>
		  <%= select_tag(:brand_selected, options_for_select(@brands, :selected => session[:brand_selected]), {:onchange => "this.form.submit()", :prompt => "All Brands"})%>
		  <%end%>
		  <br />
	</div>
	<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="text-align:right;">
		<br />
		<%= link_to "New Product", new_admin_stockproduct_path, class: "btn btn-primary" %>
	</div>
</div>
<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <% @stockproducts.each do |stockproduct| %>
			<div class="products">
			<%= render 'admin/stockproducts/product', :stockproduct => stockproduct %>
			</div>
    <%end%>
	</div>
  <div class="col-xs-12">
	<%=will_paginate(@stockproduct)%>
  </div>
</div>
</div>
