<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
  <br />
  <%= form_for [:admin, @article] do |f| %>
      <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
          <ul>
          <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
      	<%= f.label :title, "Poll Title:"%>
      	<%= f.text_area :title, class: "form-control"  %>
        <br />
        </div>
        <div class="col-lg-2 col-md-2 col-sm-6 col-xs-12">
      	<%= f.label :date_published, "Date Published:"%>
      	<%= f.text_field :date_published, class: "form-control", value: Time.zone.now.to_date %>
        <br />
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      	<%= f.label :description, "Poll Description:"%>
      	<%= f.text_area :description, class: "form-control", :cols => 80, :rows=>3 %>
        <br /><br />
        </div>
      </div>

      <!-- Nested form for user_feedback poll begin -->
      <%= f.fields_for :user_feedback, UserFeedback.new do |ff| %>
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= ff.label :question_one, "Question 1:"%>
              <%= ff.text_field :question_one, class: "form-control" %>
              <br /><br />
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= ff.label :question_two, "Question 2:"%>
              <%= ff.text_field :question_two, class: "form-control" %>
              <br /><br />
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= ff.label :question_three, "Question 3:"%>
              <%= ff.text_field :question_three, class: "form-control" %>
              <br /><br />
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= ff.label :question_four, "Question 4:"%>
              <%= ff.text_field :question_four, class: "form-control" %>
              <br /><br />
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= ff.label :question_five, "Question 5:"%>
              <%= ff.text_field :question_five, class: "form-control" %>
              <br /><br />
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= ff.label :question_six, "Question 6:"%>
              <%= ff.text_field :question_six, class: "form-control" %>
              <br /><br />
            </div>
          </div>
      <%end%>
      <!-- Nested form for user_feedback poll ends -->

      <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
      	<%= f.label :publish, "Publish:"%>
      	<%= f.select :publish, options_for_select(["No","Yes"]), class: "form-control", placeholder: "Publish: 'Yes' or 'No'" %>
        <br />
        </div>
      </div>
      <br />

      <%= f.label :article_format, "article_format", hidden: true %>
      <%= f.hidden_field :article_format, value: "user_poll" %>

      <%= f.label :location, "Location", hidden: true %>
      <%= f.hidden_field :location, value: "custom_ski_lines_article_location" %>

      <%= f.label :source, "Source", hidden: true %>
      <%= f.hidden_field :source, value: "ski-lines.com" %>

      <div class="actions">
        <%= f.submit "Save", class: "btn btn-large btn-primary" %>
    	   <td ><%= link_to 'Cancel', admin_articles_path, class: "btn btn-large btn-primary" %></td>
      </div>

      <% end %>

      <br /><br /><br /><br /><br /><br />
</div>
