<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
<br />
<%= form_for [:admin, @article], html: { class: "directUpload"} do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
	<%= f.label :location, "Youtube Video URL:"%>
	<%= f.text_field :location, class: "form-control" %>
  <br />
  </div>
  <div class="col-lg-2 col-md-2 col-sm-6 col-xs-12">
	<%= f.label :date_published, "Date Published:"%>
	<%= f.text_field :date_published, class: "form-control", value: Time.zone.now.to_date %>
  <br>
  </div>
</div>

<div class="row">
  <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
	<%= f.label :title, "Video Title (can be customized):"%>
	<%= f.text_area :title, class: "form-control", :cols => 80, :rows=>3 %>
  <br />
  </div>
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
	<%= f.label :description, "Video Description:"%>
	<%= f.text_area :description, class: "form-control", :cols => 80, :rows=>7 %>
  <br />
  </div>
</div>

<div class="row">
  <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
	<%= f.label :publish, "Publish:"%>
	<%= f.select :publish, options_for_select(["No","Yes"]), class: "form-control", placeholder: "Publish: 'Yes' or 'No'" %>
  <br />
  </div>
</div>

<br />
<%= f.label :source, "Source:", hidden: true %>
<%= f.hidden_field :source, value: "youtube.com" %>

<%= f.label :article_format, "article_format", hidden: true %>
<%= f.hidden_field :article_format, value: "youtube_video" %>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-large btn-primary" %>
	<td ><%= link_to 'Cancel', admin_articles_path, class: "btn btn-large btn-primary" %></td>
  </div>
<% end %>
<br /><br /><br /><br /><br /><br />
</div>
