<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
<br />
<%= form_for [:admin, @article], html: { class: "directUpload"} do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
	<%= f.label :title, "Article Title:"%>
	<%= f.text_area :title, class: "form-control", :cols => 80, :rows=>3 %> 
<br>
  </div>
  <div class="col-lg-2 col-md-2 col-sm-6 col-xs-12">
	<%= f.label :date_published, "Date Published:"%>
	<%= f.text_field :date_published, class: "form-control", value: Time.zone.now.to_date %> 
  <br>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
	<%= f.label :description, "Article Description:"%>
	<%= f.text_area :description, class: "form-control", :cols => 80, :rows=>10 %> 
<br /><br />
  </div>
</div>
	<%= f.label :location, "Source:", hidden: true %>
	<%= f.hidden_field :location, value: "custom_ski_lines_article_location" %>
	
	
	<%= f.label :source, "Source:", hidden: true %>
	<%= f.hidden_field :source, value: "ski-lines.com" %> 

<div class="row">
 
</div>
<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
	<div class="upload-preview img-responsive" ><img class="img-responsive" /></div>
  	<%= f.label :orig_content_photo, "Add Photo:" %><br />
    <%= f.file_field :orig_content_photo, class:'file img-responsive' %>
  <br />
  </div>
</div>

<br />
<div class="row">
	
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
	  Or, use an existing photo url:<br />
	  
	<%= f.label :image, "Image URL:", hidden: true%>
	<%= f.text_field :image, class: "form-control", placeholder: "Image URL" %> 
  <br />
  </div>
</div>
<br /><br />

<div class="row">
  <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
	<%= f.label :notes, "Article Notes:"%>
	<%= f.select :notes, options_for_select(["", "Translated", "Sponsor", "Featured"]), class: "form-control", placeholder: "Translated or Advertisement" %> 
  <br><br>
  </div>

  <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
	<%= f.label :publish, "Publish:"%>
	<%= f.select :publish, options_for_select(["No","Yes"]), class: "form-control", placeholder: "Publish: 'Yes' or 'No'" %> 
	
  <br>
  </div>
<br>
</div>

<br>
 

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-large btn-primary" %>
	<td ><%= link_to 'Cancel', admin_articles_path, class: "btn btn-large btn-primary" %></td>
  </div>
<% end %>
<br /><br /><br /><br /><br /><br />
</div>



