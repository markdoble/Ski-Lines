<div class="row">
  <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
      <div class="row">
       <div class="dropdown_for_filter col-lg-12 col-md-12 col-sm-12 col-xs-12">
         <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="modal" data-target="#modal_category_select">
           <span class="glyphicon glyphicon-filter"></span>
           Filter By Category
         </a>
       </div>
    </div>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
      <div class="row">
       <div class="dropdown_for_filter col-lg-12 col-md-12 col-sm-12 col-xs-12">
         <a href="<%= admin_products_path %>" class="btn btn-primary dropdown-toggle">
           View All Products
         </a>
       </div>
    </div>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="text-align:left">
      <div class="field input-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
         <%= form_tag("/admin/products", :method => 'get') do %>
             <%= text_field_tag :query, params[:query], class:"form-control", style: "width:80%", placeholder: "Search" %>
                 <span class="input-group-btn">
                  <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            <% end %>
                </span>
        </div>
  </div>
</div>
<div>
  <span style="float:left">View: <%= link_to "List", admin_products_path(:product_admin_view => "list") %> | <%= link_to "Detailed", admin_products_path(:product_admin_view => "detailed") %></span>
  <br />
</div>
<br />
