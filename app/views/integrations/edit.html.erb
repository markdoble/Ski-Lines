<%= form_for @integration do |f| %>
  <% if @integration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@integration.errors.count, "error") %> prohibited this integration from being saved:</h2>
      <ul>
      <% @integration.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
	<div class="col-lg-4 col-md-4 col-sm-6 cl-xs-12">
      <label for="integration_type_name">Integration Type</label><br />
      <input type="text" name="integration_type_name" id="integration_type_name" value="<%=@integration.integration_type.name%>" readonly /><br /><br />

      <%= f.label :allow_auto_scrape %><br />
      <%= f.select :allow_auto_scrape, options_for_select([['Yes', true], ['No', false]], @integration.allow_auto_scrape)%><br /><br />
	</div>
</div>

<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-6 cl-xs-12 actions">
    <%= f.submit "Save", class: "btn btn-large btn-primary" %>
    <%= link_to "Cancel", integrations_path, class: "btn btn-large btn-primary" %>
  </div>
</div>
<% end %>
