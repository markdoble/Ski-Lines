<!-- Generic User Create Form  -->
<div class="container">
	<br /><br />
	<div class="devise_user_registration">
		<div class="row">
			<div class="col-lg-2 col-md-2 col-sm-1 hidden-xs">
			</div>
			<div class="col-lg-8 col-md-8 col-sm-10 col-sm-12 devise_forms_background">
					<h1>New User:</h1>
					<div class="merchant_form_headings col-lg-12 col-md-12 col-sm-12 col-xs-12">
					</div>
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				  <%= devise_error_messages! %>
					<div class="field col-xs-12">
					  <div class="devise_label col-lg-3 col-md-3 col-sm-3 hidden-xs">
				    <%= f.label :contact_first_name, "First Name:" %>
						</div>
						<div class="col-lg-7 col-md-7 col-sm-9 col-xs-12">
				    <%= f.text_field :contact_first_name, autofocus: true, class: "form-control", placeholder: "First Name" %>
						<br />
						</div>
				  </div>
					<div class="field col-xs-12">
					  <div class="devise_label col-lg-3 col-md-3 col-sm-3 hidden-xs">
				    <%= f.label :contact_last_name, "Last Name:" %>
					</div>
					<div class="col-lg-7 col-md-7 col-sm-9 col-xs-12">
				    <%= f.text_field :contact_last_name, autofocus: true, class: "form-control", placeholder: "Last Name" %>
						<br />
						</div>
				  </div>
					<div class="field col-xs-12">
    			  <div class="devise_label col-lg-3 col-md-3 col-sm-3 hidden-xs">
    		    <%= f.label :email, "Email:" %>
					</div>
					<div class="col-lg-7 col-md-7 col-sm-9 col-xs-12">
    		    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %><br />
    				</div>
    		  </div>
    		  <div class="field col-xs-12">
    			  	<div class="devise_label col-lg-3 col-md-3 col-sm-3 hidden-xs">
    		    <%= f.label :password, "Password:" %>
					</div>
					<div class="col-lg-7 col-md-7 col-sm-9 col-xs-12">
    		    <% if @validatable %>
    		    <em>(<%= @minimum_password_length %> characters minimum)</em>
    		    <% end %>
    		    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
    				</div>
    		  </div>
    		  <div class="field col-xs-12">
    			  	<div class="devise_label col-lg-3 col-md-3 col-sm-3 hidden-xs">
    		    <%= f.label :password_confirmation, "Confirm Password:" %>
					</div>
					<div class="col-lg-7 col-md-7 col-sm-9 col-xs-12">
    		    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm", class: "form-control" %>
    				<br /><br />
    				</div>
    		  </div>
					<div class="devise_create actions" style="text-align:center">
						<%= f.submit "CREATE ACCOUNT	", class: "btn btn-primary btn-large" %>
						<br /><br />
					</div>
				<% end %>
				</div>
				<div class="col-lg-2 col-md-2 col-sm-1 hidden-xs">
				</div>
			</div>
		</div>
		<br /><br /><br /><br />
</div>
