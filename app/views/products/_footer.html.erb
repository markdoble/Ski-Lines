		<div class="footer_links col-lg-4 col-md-4 col-sm-6 col-xs-12">
			<ul>
				<li class="list_header"><a>PRODUCTS</a></li>
				<% @root_categories.order('name ASC').each do |root_category| %>
				<li><%=link_to root_category.name.downcase, products_all_products_path(:category_id => root_category.id) %></li>
				<%end%>
				<br />
			</ul>
