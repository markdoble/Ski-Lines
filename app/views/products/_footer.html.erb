				<% if current_user.merchant? %>
			<li><%= link_to "my store", admin_products_path%></li>
				<%end%>
			<%else%>
				<li><%= link_to "become a merchant", new_merchant_application_path %></li>
			<%end%>
		</ul>
		<br /><br />
	</div>
	</div>
