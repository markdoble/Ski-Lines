<%= render 'orders/navbar' %>
<div class="store_waxing_background">
		<br /><br /><br /><br /><br />
		<div class="container">
			<div class="row">

				 <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

					 <div class="dropdown_for_filter col-lg-4 col-md-4 col-sm-4 col-xs-12">
						 <div class="dropdown">
						   <button class="btn btn-primary btn-lg dropdown-toggle" type="button" data-toggle="dropdown">Filter Options
						   <span class="caret"></span></button>
						   <ul class="dropdown-menu">
		 			        <%= form_tag(products_waxing_path, method: "get") do %>

		 						<h4>Waxing Products:</h4>

		 			        <li><%= radio_button_tag(:wax, "Glide Wax", params[:wax] == "Glide Wax") %>
		 			           <%= label_tag(:wax, "Glide Wax") %></li>

		 			        <li><%= radio_button_tag(:wax, "Grip Wax", params[:wax] == "Grip Wax") %>
		 			           <%= label_tag(:wax, "Grip Wax") %></li>


		 			        <li><%= radio_button_tag(:wax, "Waxing Tools", params[:wax] == "Waxing Tools") %>
		 			           <%= label_tag(:wax, "Waxing Tools") %></li>
							   <br />

		 					<%= submit_tag "Apply Filter", :class => "filter_button btn btn-primary" %>

		 			         <% end %>
						   </ul>
						 </div>
						 <br />
					 </div>

					 <div class="search_bar col-lg-8 col-md-8 col-sm-8 col-xs-12">

					    <div class="input-group col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
					  		 <%= form_tag("/products/waxing", :method => 'get', id: "search-form") do %>
					          <%= text_field_tag :query, params[:query], class:"form-control input-lg", placeholder: "Search Waxing Products", style: "width:85%" %>
					        <div class="input-group-btn">
					          <button class="btn btn-default input-lg" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					          <% end %>
					        </div>
						 </div>
				 	</div>
					<div class="product_results col-xs-12">
						<div class="row">
					    <br />
						<% @waxing.each do |product|%>
						<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
						<%= render :partial => "products/product", :locals => {:product => product} %>
						<br />
						</div>
						<%end%>
					</div>
					</div>

				 </div>


		 	</div>


		<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
		</div>




	</div>
