<div class="merchant_page">
	<br /><br /><br /><br /><br />
	<div class="container">
	<div class="merchant_brand col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<h1><%= @user.merchant_name %></h1>
		<br /><br />
	</div>

	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="dropdown_for_filter col-lg-4 col-md-4 col-sm-4 col-xs-12">
				<div class="dropdown">
					<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Categories<span class="caret"></span></button>
					<ul class="dropdown-menu">
						<div class="product_categories_admin">
							<p><%= link_to "ALL", "#{'/shop/'+@user.slug}" %></p>
							<%
							@root_categories.each do |category|
							%><p><%= link_to category.name, "#{'/shop/'+@user.slug+'?category_id='+category.id.to_s}" %></p><%
							end
							%>
						</div>
					</ul>
				</div>
			</div>

			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="text-align:left">
				<div class="field input-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<%= form_tag("#{'/shop/'+@user.slug}", :method => 'get', id: "search-form") do %>
					<%= text_field_tag :query, params[:query], class:"form-control", placeholder: "Search #{@user.merchant_name}'s Products", style: "width:90%" %>
					<div class="input-group-btn">
					<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					<% end %>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
				<strong>Category Displayed:</strong>
				<%
				# Check to see if we are filtering on a category. If so, we will display this to the user
				if params[:category_id]
				%><%= @root_categories.find(params[:category_id]).name %><%
				else
				%>ALL<%
				end
				%>
			</div>
		</div>

		<div class="product_results col-xs-12">
			<div class="row">
				<br />
				<% @products.each do |product|%>
					<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
						<%= render :partial => "products/product", :locals => {:product => product} %>
						<br />
					</div>
				<%end%>
			</div>
		</div>
	</div>

	<br><br><br><br><br><br><br><br><br><br><br><br>

	</div>
</div>
