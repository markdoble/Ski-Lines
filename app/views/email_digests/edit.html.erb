<div class="about col-lg-6 col-md-10 col-sm-9 col-xs-12">
     <div class="col-lg-12 col-md-12 col-sm-12">
       <div class="col-lg-12 col-md-12 col-sm-12 email_digest" style="text-align:center">
       <h3>My Email subscription settings:</h3>
       <br />
     </div>

    <%= form_for @subscriber do |f|%>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <%= f.label :first_name, "First Name:" %>
        <%= f.text_field :first_name, class: "form-control input-lg", placeholder:"First Name" %>
        <br />
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <%= f.label :last_name, "Last Name:"  %>
        <%= f.text_field :last_name, class: "form-control input-lg", placeholder:"Last Name" %>
        <br />
      </div>

      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <%= f.label :email, "Email:" %>
        <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
        <br />
      </div>

      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <%= f.label :status, "Unsubscribe:" %>
        <%= f.check_box :status, {}, "Inactive", "Active" %>
        <br /><br />
      </div>

      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <%= f.submit "SAVE", class: "btn btn-primary email_digest_button" %>
        <br /><br />
      </div>
    <%end%>

    </div>
  </div>
  <div class="col-lg-3 col-md-1 hidden-sm hidden-xs">

  </div>
