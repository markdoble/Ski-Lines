<div class="article" >
	<div id="article_well" class="article_well_main">

		<div id="email_digest_form_refresh">
				<%if @subscriber_session == nil %>
				<h4 class="article_title" style="text-align:center; padding-top:10px">Subscribe to the Ski-Lines Email Digest!</h4>
		    <p style="text-align:center"> Receive weekly emails containing headlines from all your favourite ski racing news outlets. </p>

						<%= form_for @subscriber, :url => email_digests_path, remote:true do |f|%>
							<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
				        <%= f.label :first_name, "First Name:", hidden: true %>
				        <%= f.text_field :first_name, class: "form-control input-lg", placeholder:"First Name" %>
								<br />
							</div>
							<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
				        <%= f.label :last_name, "Last Name:", hidden: true  %>
				        <%= f.text_field :last_name, class: "form-control input-lg", placeholder:"Last Name" %>
								<br />
							</div>

							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				        <%= f.label :email, "Email:", hidden: true %>
				        <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
								<br />
							</div>
							<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
								<%= f.hidden_field :status, value: "Active" %>
				        <%= f.submit "SUBSCRIBE!", class: "btn btn-primary email_digest_button" %>
								<br /><br />

							</div>
				    <%end%>

				<%else%>

				<h4 class="article_title" style="text-align:center; padding-top:10px">Thank you for subscribing!</h4>
				<p style="text-align:center"> Keep an eye out for weekly emails containing headlines from all your favourite ski racing news outlets. </p>
				<% session_subscriber = EmailDigest.find_by_id(@subscriber_session)%>
				<p style="font-size:15px; font-weight:bold; text-align:center">	<%= session_subscriber.first_name %> <%= session_subscriber.last_name %><br />
				<%= session_subscriber.email %></p>

				<p style="text-align:center">	<%= link_to "Edit Subscription Settings", edit_email_digest_path(session_subscriber.id) %></p>
				<%end%>

		</div>
	</div>
</div>
